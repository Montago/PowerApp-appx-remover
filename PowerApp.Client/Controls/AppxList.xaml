<UserControl x:Class="PowerApp.Client.Controls.AppxList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PowerApp.Client.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             x:Name="root"
             d:DataContext="{d:DesignInstance Type=local:AppxList}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="White"
             mc:Ignorable="d">
    <Grid x:Name="gbRoot">
        <Grid.Resources>
            <CollectionViewSource x:Key="SortedItems"
                                  Filter="CollectionViewSource_Filter"
                                  Source="{Binding ElementName=root, Path=AppxPackages}">
                <CollectionViewSource.SortDescriptions>
                    <scm:SortDescription Direction="Ascending" PropertyName="Name" />
                </CollectionViewSource.SortDescriptions>
            </CollectionViewSource>
        </Grid.Resources>

        <Grid>
            <StackPanel Height="35"
                        VerticalAlignment="Top"
                        Background="Orange"
                        Orientation="Horizontal">

                <CheckBox Height="30"
                          Margin="10,0,0,0"
                          Content="AllUsers"
                          IsChecked="{Binding ElementName=root, Path=Filter.AllUsers}" />

                <CheckBox Height="30"
                          Margin="10,0,10,0"
                          Content="Removable"
                          IsChecked="{Binding ElementName=root, Path=Filter.Removable}" />

                <Label Height="30" VerticalContentAlignment="Center">SignatureKind:</Label>
                <ComboBox Width="70"
                          Height="30"
                          ItemsSource="{Binding Kinds, ElementName=root}"
                          SelectedItem="{Binding ElementName=root, Path=Filter.Kind}" />

                <Label Height="30" VerticalContentAlignment="Center">Name like:</Label>
                <TextBox Width="100"
                         Height="30"
                         Text="{Binding Filter.TextFilter, ElementName=root, UpdateSourceTrigger=PropertyChanged}" />


            </StackPanel>

            <ListView Margin="0,35,0,150" ItemsSource="{Binding Source={StaticResource SortedItems}}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="80" Header="Uninstall">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="UninstallPackage" Content="Remove" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                        <GridViewColumn DisplayMemberBinding="{Binding Status}" Header="Status" />
                        <GridViewColumn DisplayMemberBinding="{Binding NonRemovable}" Header="NonRemovable" />
                        <GridViewColumn DisplayMemberBinding="{Binding SignatureKind}" Header="SignatureKind" />
                        <GridViewColumn DisplayMemberBinding="{Binding Version}" Header="Version" />
                        <GridViewColumn DisplayMemberBinding="{Binding InstallLocation}" Header="Install Location" />
                        <GridViewColumn DisplayMemberBinding="{Binding Publisher}" Header="Publisher" />
                        <GridViewColumn DisplayMemberBinding="{Binding PackageFullName}" Header="FullName" />
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBox Name="tbErrorMessage"
                     Height="150"
                     VerticalAlignment="Bottom"
                     AcceptsReturn="True"
                     Background="Black"
                     Foreground="Orange"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Visible" />

        </Grid>
    </Grid>
</UserControl>
